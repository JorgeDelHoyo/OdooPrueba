<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="board_session_form" model="ir.ui.view">
        <field name="name">Session Dashboard Form</field>
        <field name="model">board.board</field>
        <field name="arch" type="xml">
            <form string="Session Dashboard">
                <board style="2-1">
                    <column>
                        <action name="%(action_list_courses)d" string="Courses"/>
                    </column>
                    <column>
                        <action name="%(action_list_sessions)d" string="Sessions" view_mode="graph"/>
                        <action name="%(action_list_sessions)d" string="Calendar" view_mode="calendar"/>
                    </column>
                </board>
            </form>
        </field>
    </record>

    <record id="open_board_session" model="ir.actions.act_window">
        <field name="name">Session Dashboard</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="board_session_form"/>
    </record>

    <menuitem id="menu_board_session" parent="menu_main_openacademy" action="open_board_session" sequence="1" name="Dashboard"/>
</odoo>